{% extends 'base.html.twig' %}

{% block title %}Channel index{% endblock %}

{% block body %}
    <h1>Channel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Website</th>
                <th>Location</th>
                <th>Logo</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for channel in channels %}
            <tr>
                <td>{{ channel.id }}</td>
                <td>{{ channel.name }}</td>
                <td>{{ channel.website }}</td>
                <td>{{ channel.location }}</td>
                <td>{{ channel.logo }}</td>
                <td>{{ channel.link }}</td>
                <td>
                    <a href="{{ path('channel_show', {'id': channel.id}) }}">show</a>
                    <a href="{{ path('channel_edit', {'id': channel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('channel_new') }}">Create new</a>
{% endblock %}
